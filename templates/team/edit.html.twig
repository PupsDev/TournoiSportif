{% extends 'base.html.twig' %}

{% block title %}Modifier l'équipe{% endblock %}

{% block body %}
	{% set idCaptain = 1 %}
	{% for player in team.players %}
		{% if 'ROLE_CAPTAIN' in player.roles %}
			{% set idCaptain = player.id %}
		{% endif %}

	{% endfor %}
    <div class="card-header" style="background-color:#303030;color:white;text-align:center;">
	}
<h1>
    <div class="row">
    <div class="col-6">
    Modifier l'équipe
    </div>
    <div class="col" style="border-left:2px solid white; height:100%;">

                <a href="{{ path('player_show', {'id': idCaptain}) }}" class="btn btn-danger">Retour</a>
    </div>
    </h1>
</div>

       {{ form_start(form) }}
  
    <div class = "form-group">
    	<label for = "">Nom de l'équipe :</label>
        {{form_widget(form.name)}}
    </div>

  <div class = "form-group">
    	<label for = "">Choisir le tournoi :</label>
        {{form_widget(form.turnament)}}
    </div>

    	
    <button class="btn btn-success">{{ button_label|default('Mettre à jour') }}</button>
     {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}


{% endblock %}
