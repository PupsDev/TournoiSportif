{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Évènement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ event.playerPerTeam }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">Retour à la liste</a>

     <a href="{{ path('turnament_index', {'idEvent': event.id}) }}">Voir le tournoi</a>
    <a href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
